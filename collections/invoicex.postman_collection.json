{
  "info": { "name": "InvoiceX API", "_postman_id": "1234", "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json" },
  "item": [
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"admin@invoicex.com\",\"password\":\"Admin@123\"}"
        }
      },
      "event": [{
        "listen": "test",
        "script": { "exec": [
          "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
          "pm.environment.set('token', pm.response.json().token);"
        ], "type": "text/javascript" }
      }]
    },
    {
      "name": "Create Invoice",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/invoices",
        "body": {
          "mode": "raw",
          "raw": "{\"amount\":120.5,\"customerId\":1001}"
        }
      },
      "event": [{
        "listen": "test",
        "script": { "exec": [
          "pm.test('201 Created', () => pm.response.to.have.status(201));",
          "pm.environment.set('invoiceId', pm.response.json().id);"
        ], "type": "text/javascript" }
      }]
    }
  ]
}
